# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/sikars
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sikars
DB_USER=postgres
DB_PASSWORD=your_password
DB_POOL_MIN=2
DB_POOL_MAX=10

# Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# Payment Processing (Authorize.net)
AUTHORIZE_NET_API_LOGIN_ID=your_api_login_id
AUTHORIZE_NET_TRANSACTION_KEY=your_transaction_key
AUTHORIZE_NET_ENV=sandbox
# Set to 'production' for live transactions

# AWS S3 Storage
AWS_S3_BUCKET=sikars-media
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=orders@sikars.com
ADMIN_EMAIL=admin@sikars.com

# URLs
FRONTEND_URL=http://localhost:3000
TRACKING_BASE_URL=http://localhost:3000/track
API_BASE_URL=http://localhost:5000

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Pricing
BASE_PRICE=30.00
TAX_RATE=0.08
SHIPPING_COST_STANDARD=9.99
SHIPPING_COST_EXPRESS=24.99

# File Upload
MAX_FILE_SIZE=10485760
# 10MB in bytes
UPLOAD_PATH=uploads/
